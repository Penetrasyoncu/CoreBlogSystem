@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "Yeni Mesaj Gönder";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-content mailbox-content">
                    <div class="file-manager">                        
                        <h5>Mesajlar</h5>
                        <ul class="folder-list m-b-md" style="padding: 0">
                            <li><a href="/Admin/AdminMessage/Inbox"> <i class="fa fa-inbox "></i> Gelen Kutusu </a></li>
                            <li><a href="/Admin/AdminMessage/Sendbox"> <i class="fa fa-envelope-o"></i> Giden Kutusu</a></li>
                            <li><a href="#"> <i class="fa fa-certificate"></i> Önemli</a></li>
                            <li><a href="#"> <i class="fa fa-file-text-o"></i> Taslaklar <span class="label label-danger float-right">2</span></a></li>
                            <li><a href="#"> <i class="fa fa-trash-o"></i> Silinenler</a></li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
        @using (Html.BeginForm("AdminSendMessage", "AdminMessage", FormMethod.Post))
        {
            @*Alt Taraftaki Col-12 den sebebp ilk açılırken animasyon bozuk geliyor -- Önceden 9 idi*@
            <div class="col-lg-12 animated fadeInRight">
                <div class="mail-box-header">
                    <div class="float-right tooltip-demo">
                        <button type="submit" class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="top" title="Move to draft folder"><i class="fa fa-pencil"></i> Mesajı Gönder</button>
                        <a href="##" onClick="history.go(-1); return false;" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Discard email"><i class="fa fa-times"></i> Vazgeç</a>
                    </div>
                    <h2>
                        Yeni Mesaj
                    </h2>
                </div>
                <div class="mail-box">
                    <div class="mail-body">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" for="ReceiverID">Alıcı Seçimi:</label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x=>x.ReceiverID, (List<SelectListItem>)ViewBag.RecieverUser, new{@class="form-control"})
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Konu:</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x=>x.Subject, new {@class = "form-control"})
                            </div>
                        </div>
                    </div>
                    <div class="mail-text h-200">
                        <div class="summernote">
                            @Html.TextAreaFor(x=>x.MessageDetails, 15, 3, new {@class = "form-control"})
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        }
    </div>
</div>
<script src="~/js/jquery-3.6.0.min.js"></script>
<script src="~/ckeditor/ckeditor.js"></script>
<script>
    var Icerik = CKEDITOR.replace('MessageDetails');
</script>