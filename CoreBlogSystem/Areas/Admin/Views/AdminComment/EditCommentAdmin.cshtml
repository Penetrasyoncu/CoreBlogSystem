@model EntityLayer.Concrete.Comment
@{
    ViewData["Title"] = "Yorum Detayları";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("EditCommentAdmin", "AdminComment", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.CommentID, new {@class = "form-control"})
    @Html.HiddenFor(x=>x.BlogID, new {@class = "form-control"})
    @Html.HiddenFor(x=>x.CommentUserName, new {@class = "form-control"})
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-12 animated fadeInRight">
                <div class="mail-box-header">
                    <div class="float-right tooltip-demo">
                        <button type="submit" class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="top" title="Yorumu Düzenle"><i class="fa fa-pencil"></i> Yorumu Düzenle</button>
                        <a href="##" onClick="history.go(-1); return false;" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Vazgeç"><i class="fa fa-times"></i> Vazgeç</a>
                    </div>
                    <h2>
                        Yorum Detayları
                    </h2>
                    <div class="mail-tools tooltip-demo m-t-md">
                        <h3>
                            <span class="font-normal">Başlık: </span>@Html.TextBoxFor(x=>x.CommentTitle , new {@class = "form-control"})
                        </h3>
                        <h5>
                            <span class="float-right font-normal">@Html.TextBoxFor(x=>x.CommentDate , new {@class = "form-control"})</span>
                        </h5>
                    </div>
                </div>
                <div class="mail-box">
                    <div class="mail-body">
                        @Html.TextAreaFor(x=>x.CommentContent, 15, 3, new {@class = "form-control"})
                    </div>
                    <div class="mail-body text-right tooltip-demo">
                        <a href="##" onClick="history.go(-1); return false;" class="btn btn-sm btn-white"> <i class="fa fa-reply"></i> Yorumlara Dön</a>
                        <button title="" data-placement="top" data-toggle="tooltip" type="button" data-original-title="Yazdır" class="btn btn-sm btn-white"><i class="fa fa-print"></i> Yazdır</button>
                        <button title="" data-placement="top" data-toggle="tooltip" data-original-title="Sil" class="btn btn-sm btn-white"><i class="fa fa-trash-o"></i> Sil</button>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/js/jquery-3.6.0.min.js"></script>
<script src="~/ckeditor/ckeditor.js"></script>
<script>
    var Icerik = CKEDITOR.replace('CommentContent');
</script>