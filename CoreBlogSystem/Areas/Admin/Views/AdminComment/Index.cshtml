@using X.PagedList
@using X.PagedList.Mvc.Core
@using CoreBlogSystem.Helpers
@using EntityLayer.Concrete
@using System.Globalization
@model IPagedList<Comment>

@{
    ViewData["Title"] = "Yorumlar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    CultureInfo culture = new CultureInfo("tr-TR");
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Yorumlar</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Kullanıcı (YorumYapan)</th>
                                <th>Yorum Başlığı</th>
                                <th>Yorum Tarihi</th>
                                <th>Blog</th>
                                <th>Puan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var comment in Model)
                            {
                                <tr>
                                    <td>@comment.CommentUserName</td>
                                    <td>@comment.CommentTitle</td>
                                    <td>@Html.Raw((((DateTime)comment.CommentDate).ToString("dd MMMM yyyy", culture)))</td>
                                    <td>@comment.Blog.BlogTitle</td>
                                    @switch (@comment.BlogScore)
                                    {
                                        case >= 6:
                                            <td class="text-navy"><i class="fa fa-level-up"></i> @comment.BlogScore</td>
                                            break;

                                        case <= 5:
                                            <td class="text-warning"><i class="fa fa-level-down"></i> @comment.BlogScore</td>
                                            break;

                                        default:
                                            <td class="text-navy"><i class="fa fa-level-up"></i> @comment.BlogScore</td>
                                            break;
                                    }
                                    <td><a href="" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Admin/AdminComment/EditCommentAdmin/@comment.CommentID" class="btn btn-outline-success">Düzenle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.PagedListPager((IPagedList) Model, page => Url.Action("Index", new { page }))