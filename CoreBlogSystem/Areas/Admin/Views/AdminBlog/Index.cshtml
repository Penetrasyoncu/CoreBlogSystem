@using EntityLayer.Concrete
@using System.Globalization
@model List<Blog>

@{
    ViewData["Title"] = "Tüm Bloglar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    CultureInfo culture = new CultureInfo("tr-TR");
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="ibox">
                    <div class="ibox-content product-box">
                        <div class="product-imitation">
                            <img src="@item.BlogImage" class="card-img-top img-fluid mt-2" />
                        </div>
                        <div class="product-desc">
                            <span class="product-price">
                                @Html.Raw((((DateTime)item.BlogCreateDate).ToString("dd MMMM yyyy", culture)))
                            </span>
                            <small class="text-muted"><span class="badge badge-warning">@item.Category.CategoryName</span></small>
                            <a href="#" class="product-name"> @item.BlogTitle</a>

                            <div class="small m-t-xs">
                                @Html.Raw(item.BlogContent.Substring(0,item.BlogContent.Substring(0,130).LastIndexOf(" ")))...
                            </div>
                            <div class="m-t text-righ">
                                <a href="#" class="btn btn-xs btn-outline btn-primary">Git <i class="fa fa-long-arrow-right"></i> </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>