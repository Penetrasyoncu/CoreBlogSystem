@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "Kullanıcı Rol Listesi";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Kullanıcı Rolleri</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>                       
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#Kullanıcı</th>
                                <th>Rol Ata</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@role.UserName</td>                                    
                                    <td><a href="/Admin/AdminRole/AssignRole/@role.Id" class="btn btn-outline-twitter">Rol Ata</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/AdminRole/Index" class="btn btn-outline-primary">Rol Listesine Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>