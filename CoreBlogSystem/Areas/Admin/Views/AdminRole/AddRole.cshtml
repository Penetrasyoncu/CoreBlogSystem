@using CoreBlogSystem.Models
@model RoleViewModel
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Yeni Rol Ekleme</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>                                                                        
                    </div>
                </div>
                <div class="ibox-content">
                    <form method="post">
                        <div class="form-group row">
                            <label class="col-lg-2 col-form-label">Rol Adı</label>

                            <div class="col-lg-10">
                                <input type="text" name="Name" placeholder="Rol Adı Giriniz" class="form-control">
                            </div>
                        </div>
                        <div asp-validation-summary="ModeOnly"></div>
                        <div class="form-group row">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-sm btn-white" type="submit">Yeni Rol Ekle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>