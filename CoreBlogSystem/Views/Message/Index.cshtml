@using EntityLayer.Concrete
@model List<Message2>

@{
    ViewData["Title"] = "Giden Kutusu";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Gelen Kutusu</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Gönderen</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageID</th>
            <td>@Html.Raw(item.Subject)</td>
            <td>@Html.Raw((((DateTime)item.MessageDate).ToString("dd MMMM yyyy")))</td>
            <td>@item.SenderUserIdentity.NameSurname</td>
            <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">Mesajı Aç</a></td>
        </tr>
    }
</table>
<a href="/Message/SendMessage" class="btn btn-primary">Yeni Mesaj Oluştur</a>