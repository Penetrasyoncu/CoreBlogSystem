@using EntityLayer.Concrete
@model List<Writer>

@*//Bu view componentimiz ise dashboard kısmında yazar hakkında kısmını göstermektedir.
    Giriş Yapan Kullanıcının Bilgilerini Getirir Yani.
*@
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Hakkında</h4>
                <div class="d-flex mt-5 align-items-top">
                    @foreach (var item in Model)
                    {
                        <img src="@item.WriterImage" class="img-sm rounded-circle mr-3" alt="Writer İmage">
                        <div class="mb-0 flex-grow">
                            <h5 class="mr-2 mb-2">@item.WriterName</h5>
                            <p class="mb-0 font-weight-light">@item.WriterAbout</p>
                        </div>
                        <div class="ml-auto">
                            <i class="mdi mdi-heart-outline text-muted"></i>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>  