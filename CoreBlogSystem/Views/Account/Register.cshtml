@model UserSignUpViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>CoreBlogSystem | Yazar Kayıt Sayfası</title>

    <link href="~/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/animate.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/style.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/toastr.min.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">IBO</h1>
            </div>
            <h3>CoreBlogSystem Yazar Kayıt</h3>
            <p>Yeni Yazar Ekleyin</p>
            <form class="m-t" role="form" method="post" id="RegisterForm">
                <div class="form-group">
                    <input type="text" asp-for="@Model.NameSurname" class="form-control" placeholder="Adınız Soyadınız">
                </div>
                <div class="form-group">
                    <input type="email" asp-for="@Model.Mail" class="form-control" placeholder="Email" required="">
                </div>
                <div class="form-group">
                    <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Password" required="">
                </div>
                <div class="form-group">
                    <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Password" required="">
                </div>
                <div class="form-group">
                    <input type="text" asp-for="@Model.UserName" class="form-control" placeholder="Kullanıcı Adı Belirleyin" required="">
                </div>
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox" asp-for="ConfirmKVKK"><i></i> KVKK Okudum </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Zaten Bir Hesabınız Var Mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Account/Login">Giriş Yap</a>
            </form>
            <p class="m-t"> <small>CoreBlogSystem Tüm Hakları Saklıdır. | @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/inspinia-gh-pages/js/popper.min.js"></script>
    <script src="~/inspinia-gh-pages/js/bootstrap.js"></script>
    <script src="~/inspinia-gh-pages/js/toastr.min.js"></script>
    <!-- iCheck -->
    <script src="~/inspinia-gh-pages/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>

    <script>
        $("#RegisterForm").submit(function (event) {
            var form = $('#RegisterForm')[0];
            var data = new FormData(form);

            $.ajax({
                url: '/Account/Register',
                type: 'POST',
                enctype: 'multipart/form-data',
                data: data,
                processData: false,
                contentType: false,
                cache: false,
                timeout: 600000,
                success: function (result) {
                    if (result.isSuccess) {
                        toastr['success'](result.message, 'Başarılı');
                        $('#RegisterForm')[0].reset();
                    }
                    else {
                        toastr['error'](result.message, 'Hata');
                    }
                }
            });
            return false;
        });
    </script>
</body>

</html>
