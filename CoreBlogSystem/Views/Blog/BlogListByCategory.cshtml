@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    //ViewData["Title"] = ViewBag.CategorName + " " + "Ait Yazılar";
    ViewData["Title"] = ViewBag.CategoryName + "Ait Yazılar";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Yazıları</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card mx-auto">
                            <a href="#">
                                <img src="@Html.Raw(item.BlogImage)" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i>@Html.Raw((((DateTime)item.BlogCreateDate).ToString("dd MMM yyyy")))
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> @Html.Raw(item.Category.CategoryName)
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> 21
                                        </a>
                                    </li>
                                </ul>
                                <h5 class="card-title ">
                                    <a href="/blog/@item.Category.CategorUrl/@item.BlogUrl">@item.BlogTitle</a>
                                </h5>
                                <p class="card-text mb-3">@Html.Raw(item.BlogContent.Substring(0,item.BlogContent.Substring(0,130).LastIndexOf(" ")))...</p>
                                <a href="/blog/@item.Category.CategorUrl/@item.BlogUrl" class="btn btn-primary read-m">Devamını Oku</a>
                            </div>
                        </div>
                    }
                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>	