 @model EntityLayer.Concrete.Blog

@{
    ViewData["Title"] = "Blog Düzenle";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<h1>Blog Düzenle</h1>

@using (Html.BeginForm("EditBlog", "Blog", FormMethod.Post))
{
    //Burada BlogID işimize yaramaz getirmeyelim dersek eğer .net in kafası karışır ve güncelleyeceğine yeniden oluşturur
    //Çünkü Back-End tarafına giderken buradaki ID' yi de alıp götürdüğü için bulamaz ve yeniden oluşturur
    <div class="form-row">
        <div class="col-md-12 mb-3">
            <label for="BlogTitle">Blog ID</label>
            @Html.TextBoxFor(x=>x.BlogID, new {@class = "form-control"})            
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-12 mb-3">
            <label for="BlogTitle">Blog Başlığı</label>
            @Html.TextBoxFor(x=>x.BlogTitle, new {@class = "form-control"})
            @Html.ValidationMessageFor(x=>x.BlogTitle,"",new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-12 mb-3">
            <label for="BlogContent">Blog İçeriği</label>
            @Html.TextAreaFor(x=>x.BlogContent, 10, 3, new {@class = "form-control"})
            @Html.ValidationMessageFor(x=>x.BlogContent,"",new {@class = "text-danger"})
        </div>
    </div>
     <div class="form-row">
        <div class="col-md-12 mb-3">
            <label for="BlogThumbnailImage">ThumbnailImage Giriniz</label>
            @Html.TextBoxFor(x=>x.BlogThumbnailImage, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-12 mb-3">
            <label for="BlogImage">Resim Giriniz</label>
            @Html.TextBoxFor(x=>x.BlogImage, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-12 mb-3">
            <label for="CategoryID">Kategori Seçimi</label>
            @Html.DropDownListFor(x=>x.CategoryID, (List<SelectListItem>)ViewBag.Cv, new{@class="form-control"})
        </div>
    </div>       
    <div class="form-row">
        <button type="submit" class="btn btn-info">Yazıyı Güncelle</button>
    </div>
}